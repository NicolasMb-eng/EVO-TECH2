{% extends 'baseUser.html.twig' %}
{% block title  %} {% endblock %}
{% block body %}
    <section class="user-profile section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
                    <div class="sidebar">
                        <!-- User Widget -->
                        <div class="widget user">
                            <!-- User Image -->
                            <div class="image d-flex justify-content-center">
                                <img src="images/user/user-thumb.jpg" alt="" class="">
                            </div>
                            <!-- User Name -->
                            <h5 class="text-center">{{ app.user.name }}</h5>
                        </div>
                        <!-- Dashboard Links -->

                        <div class="widget dashboard-links">
                            <ul>
                                <li><a class="my-1 d-inline-block" href="">Mes Reclamation </a></li>
                                <li><a class="my-1 d-inline-block"   >Envoie Nous un message </a></li>



                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
                    <!-- Edit Profile Welcome Text -->
                    <div class="widget welcome-message">
                        <h2>Profile de  {{ app.user.name}} {{ app.user.firstname}} </h2>
                    </div>



                    <a  href="{{ path('modifierProfil') }}" class="d-block btn bg-primary text-white my-3 select-files">
                        changer les informations personelles </a>
                    <a   class="d-block btn bg-primary text-white my-3 select-files">changer le Mot de passe </a>
                    <!-- Edit Personal Info -->
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="widget personal-info">
                                <h4 class="widget-header user">Nom </h4>
                                {{ app.user.name }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="widget personal-info">
                                <h4 class="widget-header user">Prenom </h4>
                                {{ app.user.firstname }}

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="widget personal-info">
                                <h4 class="widget-header user">Email </h4>
                                {{ app.user.email }}
                            </div>
                        </div>
                    </div>



                </div>




            </div>
        </div>


    </section>
{% endblock %}