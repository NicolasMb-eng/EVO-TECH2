{% extends 'base.html.twig' %}
{% block title  %} {% endblock %}
{% block body %}
    <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">

        {% for message in app.flashes('message') %}
            <div>
                <div>{{ message }}</div>

            </div>
        {% endfor %}
    </div>
    <section class="user-profile section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
                    <div class="sidebar">
                        <!-- User Widget -->
                        <div class="widget user">
                            <!-- User Image -->
                            <div class="image d-flex justify-content-center">
                                <img src="images/user/user-thumb.jpg" alt="" class="">
                            </div>
                            <!-- User Name -->
                            <h5 class="text-center">{{ app.user.name }}</h5>
                        </div>
                        <!-- Dashboard Links -->

                        <div class="widget dashboard-links">
                            <ul>
                                <li><a class="my-1 d-inline-block" href="">Mes Reclamation </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
                    <!-- Edit Profile Welcome Text -->
                    <div class="widget welcome-message">
                        <h2> Modification Profile de  {{ app.user.name}} {{ app.user.firstname}} </h2>
                    </div>

                    <div>


                        <a href="{{ path('modifierProfil') }}" >les informations personelles </a>
                        <a href="{{ path('modifierProfil') }}" >les informations personelles </a>
                        <span class="d-block btn bg-primary text-white my-3 select-files">   changer le mot de passe </span>
                    </div>


                    <!-- Edit Personal Info -->
                    {{ form(form) }}
                </div>
            </div>
        </div>


    </section>
{% block body %}