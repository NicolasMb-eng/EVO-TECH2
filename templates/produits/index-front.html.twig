{% extends 'base.html.twig' %}
{% block body %}

   <section class="page-search">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Advance Search -->
                    <div class="advance-search">
                        <form method = "post">
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <input name="Search" type="text" class="form-control my-2 my-lg-0" id="inputtext4" placeholder="tapez ici">
                                </div>
                                <div class="form-group col-md-3">
                                    <input name="categorie" type="text" class="form-control my-2 my-lg-0" id="inputCategory4" placeholder="Categories">
                                </div>

                                <div class="form-group col-md-2">

                                    <button type="submit" class="btn btn-primary">Chercher</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ----------------------- -->

    <body class="body-wrapper">

    <section class="section-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="category-sidebar">
                        <div class="widget category-list">
                            <h4 class="widget-header">Toutes les cat√©gories</h4>
                            <ul class="category-list">
                                {% for categorie in categories %}

                                <li> <a href="{{ path('search_produit',{id: categorie.id}) }}">
                                        {{ categorie.nomCategorie }}
                                        <span></span>
                                     </a>
                                </li>
                                {% endfor %}

                            </ul>
                        </div>

                        <div class="widget filter">
                            <h4 class="widget-header">Show Produts</h4>
                            <select>
                                <option>Popularity</option>
                                <option value="1">Top rated</option>
                                <option value="2">Lowest Price</option>
                                <option value="4">Highest Price</option>
                            </select>
                        </div>

                        <div class="widget price-range w-100">
                            <h4 class="widget-header">Rang des prix</h4>
                            <div class="block">
                                <input class="range-track w-100" type="text" data-slider-min="0" data-slider-max="5000" data-slider-step="5"
                                       data-slider-value="[0,5000]">
                                <div class="d-flex justify-content-between mt-2">
                                    <span class="value">10TND - 5000TND</span>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-md-9">
                    <div class="category-search-filter">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Trier par</strong>
                                <select onchange="location = this.value">
                                    {% for categorie in categories %}
                                    <option value ="{{ path('search_produit',{id: categorie.id}) }}">
                                            {{ categorie.nomCategorie }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-6">
                                <div class="view">
                                    <strong>Views</strong>
                                    <ul class="list-inline view-switcher">
                                        <li class="list-inline-item">
                                            <a href="#" onclick="event.preventDefault();" class="text-info"><i class="fa fa-th-large"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="ad-list-view.html"><i class="fa fa-reorder"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-grid-list">
                        <div class="row mt-30">
                            {% for produit in produits %}
                            <div class="col-sm-12 col-lg-4 col-md-6">
                                <!-- product card -->
                                <div class="product-item bg-light">
                                    <div class="card">
                                        <div class="thumb-content">
                                            <!-- <div class="price">$200</div> -->
                                            <a href="{{ path("produits_index_singleItem", {id: produit.id}) }}">
                                                <img src="{{ asset('/images/products/'~ produit.image) }}">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="single.html">{{ produit.nomProduit }}</a></h4>
                                            <ul class="list-inline product-meta">
                                                <li class="list-inline-item">
                                                    <a href="single.html"><i class="fa fa-folder-open-o"></i>{{produit.idCategorie}}</a>
                                                </li>

                                            </ul>
                                            <p class="card-text">{{produit.descProduit}}</p>
                                            <div class="product-ratings">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {{ knp_pagination_render(produits) }}

